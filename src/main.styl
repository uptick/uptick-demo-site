theme-colour-bg-header = #fff
theme-colour-text = #333
theme-colour-text-code = #000
theme-colour-bg-dark = #323232

// base styles

body
  background: theme-colour-bg-dark
  font-size: 1.2rem
  line-height: 1.8rem
  padding: 0
  margin: 0
  font-family: 'Lato', sans-serif
  font-weight: 300

h1, h2, h3,
h4, h5, h6,
  margin-bottom: 1rem
  font-weight: 400
h1, h2, h3
  margin-top: 6rem
h4, h5, h6
  margin-top: 3rem
a
  color: theme-colour-text
  text-decoration: none
  &:hover
    color: darken(theme-colour-text, 20%)
    text-decoration: none
ul, ol
  li
    margin: 0.5rem 0
code
  max-height: 25vh
  white-space: pre
  display: block
  background: #eee
  padding: 1rem
  overflow-y: auto
  color: theme-colour-text-code

// layout

div.content-container
  max-width: 50rem
  margin: 0 auto

div.header
  padding: 2rem
  background: theme-colour-bg-header
  color: #333
  a
    color: #333
    &.title
      font-weight: 400
      font-size: 1.6rem
      color: #ff431f

div.content
  background: #fafafa
  padding: 4rem 1rem

a.source-link
  display: block
  color: theme-colour-text-code
  text-align: right
  text-transform: uppercase
  font-size: 0.8rem
  line-height: 1em
  margin: 0.5rem 0

div.footer
  padding: 3rem 1rem
  color: #fff
